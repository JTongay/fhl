{
    // "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "test/*": [
                "spec/*"
            ]
        },
    },
    "compileOnSave": true,
    "include": [
        "src",
        "spec"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "verbose": true,
        "resolveFullPaths": true,
        "replacers": {
            "base-url": {
                "enabled": true
            }
        }
    }
}